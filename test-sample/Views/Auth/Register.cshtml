@{
  ViewData["Title"] = "Register";
}

<div class="container mt-5">
  <form method="post" class="login-box d-flex flex-column gap-2" id="register-form">
    <div class="w-100">
      <label>First Name</label>
      <input name="first_name" data-parsley-error-message="First name is required" placeholder="First name" type="text"
        class="form-control" required />
    </div>
    <div class="w-100">
      <label>Last Name</label>
      <input name="last_name" data-parsley-error-message="Last name is required" placeholder="Last name" type="text" class="form-control" required />
    </div>
    <div class="w-100">
      <label>Email</label>
      <input name="email" data-parsley-error-message="Email not valid" placeholder="Email. e.g. jdoe@@example.com" autocomplete="username" type="email"
        class="form-control" required />
    </div>
    <div class="w-100">
      <label>Password</label>
      <input name="password" data-parsley-error-message="Password is required" placeholder="Password" autocomplete="new-password" class="form-control"
        type="password" required />
    </div>
    <div>
      <label>Confirm Password</label>
      <input name="password_confirm" data-parsley-error-message="Password mismatch" placeholder="Confirm Password" data-parsley-equalto="[name='password']"
        autocomplete="new-password" class="form-control" type="password" />
    </div>
    <button class="btn btn-primary" id="register-button">
      Register&nbsp;
      <partial name="_SpinnerPartial" />
    </button>
    <div class="text-right">
      <span>Have an Account ? </span>
      <a href="/Auth/Login">Sign in</a>
    </div>
  </form>
</div>
@section Scripts {
  <script src="~/js/parsley.min.js" asp-append-version="true"></script>
  <script src="~/js/register.js" asp-append-version="true"></script>
}